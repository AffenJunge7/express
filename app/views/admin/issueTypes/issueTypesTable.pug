if(issueTypes)
  .row.mt-5
    .col-md.m-auto
      table.table.table-hover
        thead
          tr
            th Id
            th Name
            th Description
            th Issue Type Scheme
            th &nbsp;
            th &nbsp;
        tbody
          each issueType,index in issueTypes
            tr
              td #{index}
              td #{issueType.name}
              td #{issueType.description}
              td
                -var issueTypeSchemesNameExists = issueTypeSchemesNames.includes(issueType.name)
                  if !issueTypeSchemesNameExists
                    a(href=`/admin/issueTypeSchemes?issuetype=${issueType.name}`).btn.btn-danger No Issue Type Scheme
                  else
                    button.btn.btn-success Issue Type Scheme
              td
                a.btn.btn-info(href=`issueTypes/${issueType.name}/details`) Details
              td
                a.btn.btn-info(href=`issueTypes/${issueType.name}/edit`) Edit
              td
                a.btn.btn-warning(href=`issueTypes/${issueType.name}/delete`) Delete