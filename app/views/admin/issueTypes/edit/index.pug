extends ../../../layouts/fullWidth.pug

block page-header
  h2 Project Details

block content
  .row.mt-5
      .col-md-6.m-auto
          .card.card-body
            .messages
            include ../../../includes/messages.pug
              form(action=`/admin/issueTypes/${issueType.name}/edit` method='POST')
                .form-group
                  p
                    strong Project Name: 
                      input.form-control(type='text', name="name" value=issueType.name, aria-label='issueType Name')
                  p
                    strong Project Description: 
                      input.form-control(type='text', name="description" value=issueType.description, aria-label='issueType Description')
                button.btn.btn-primary(type="submit") Speichern