extends ../../../layouts/fullWidth.pug

block page-header
  h2 issueType Delete

block content
  .row.mt-5
      .col-md-6.m-auto
          .card.card-body
            p Do you really want to delete: 
              strong #{issueType.name}
            form(method="POST")
              button(type="submit").btn.btn-block.btn-warning Yes
              a(href="/admin/issueTypes").btn.btn-block.btn-primary No