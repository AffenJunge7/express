extends ../layouts/default.pug

block page-header
  h2 Login to the Waffles!

block content
    .row.mt-5
    .col-md-6.m-auto
        .card.card-body
            .messages
            include ../includes/messages.pug
            form(action='/login' method='POST')
                .form-group
                    label(for='email') Email
                    input#email.form-control(type='email' name='email' placeholder='Enter Email' value=email)
                .form-group
                    label(for='password') Password
                    input#password.form-control(type='password' name='password' placeholder='Enter Password')
                button.btn.btn-primary.btn-block(type='submit') Login
  
