extends ../../../layouts/default.pug

block page-header
    h2 Create Waffle User

block content
    .row.mt-5
    .col-md-6.m-auto
        .card.card-body
            .messages
            include ../../../includes/messages.pug
            form(action='/api/users/create' method='POST')
                .form-group
                    label(for='name') Name
                    input#name.form-control(type='text' name='name' placeholder='Enter Name' value=name)
                .form-group
                    label(for='email') Email
                    input#email.form-control(type='email' name='email' placeholder='Enter Email' value=email)
                .form-group
                    label(for='password') Password
                    input#password.form-control(type='password' name='password' placeholder='Enter Password')
                .form-group
                    label(for='password2') Confirm Password
                    input#password2.form-control(type='password' name='password2' placeholder='Confirm Password')
                button.btn.btn-primary.btn-block(type='submit') Create

